<%- include("../partials/header") %>

<div class="container">
    <div class="row">

        <h1 class="form-header">Edit <%= campground.name %></h1>

        <div >
            <form class="col-11 col-sm-9 col-md-7 col-lg-6 mx-auto d-inline" action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="campground[name]">Name</label>
                    <input class="form-control" type="text" name="campground[name]" value="<%= campground.name %>" required>
                </div>
                <div class="form-group">
                    <label for="campground[price]">Price per night (Â£)</label>
                    <input class="form-control" type="number" name="campground[price]" value="<%= campground.price %>" min="0.00" step="0.01" required>
                </div>
                <div class="form-group">
                    <label for="campground[name]">Image URL</label>
                    <input class="form-control" type="text" name="campground[image]" value="<%= campground.image %>" required>
                </div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="location" id="location" value="<%= campground.location %>" required>
                </div>
                <div class="form-group">
                    <label for="campground[description]">Description</label>
                    <textarea class="form-control" name="campground[description]" required><%= campground.description %></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-lg btn-block">Submit</button>
                </div>
            </form>
            <a href="/campgrounds/<%= campground._id %>">Go back</a>
        </div>

    </div>
</div>

<%- include("../partials/footer") %>