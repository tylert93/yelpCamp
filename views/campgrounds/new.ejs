<%- include("../partials/header") %>

<div class="container">
    <div class="row">

        <h1 class="form-header">Create new campground</h1>

        <div class="form-container">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <label for="campground[name]">Name</label>
                    <input class="form-control" type="text" name="campground[name]" placeholder="Cresent Canyon" required>
                </div>
                <div class="form-group">
                    <label for="campground[price]">Price per night (Â£)</label>
                    <input class="form-control" type="number" name="campground[price]" value="0.00" min="0.00" step="0.01" required>
                </div>
                <div class="form-group">
                    <label for="campground[name]">Image URL</label>
                    <input class="form-control" type="text" name="campground[image]" placeholder="https://www..." required>
                </div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="location" id="location" placeholder="Yosemite National Park, CA" required>
                </div>
                <div class="form-group">
                    <label for="campground[description]">Description</label>
                    <textarea class="form-control" name="campground[description]" placeholder="The best kept secret in..." required></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-lg btn-block">Submit</button>
                </div>
            </form>
            <a href="/campgrounds">Go back</a>
        </div>

    </div>
</div>

<%- include("../partials/footer") %>